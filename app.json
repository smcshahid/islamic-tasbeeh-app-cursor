{
  "expo": {
    "name": "Tasbeeh App",
    "slug": "tasbeeh-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide accurate Islamic prayer times for your current location.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to provide accurate Islamic prayer times and send timely notifications.",
        "UIBackgroundModes": [
          "audio",
          "background-fetch",
          "background-processing"
        ]
      }
    },
    "android": {
      "package": "com.tasbeehapp",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#4CAF50"
      }
    },
    "web": {
      "bundler": "metro"
    },
    "scheme": "tasbeeh-app",
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "color": "#4CAF50",
          "defaultChannel": "default",
          "sounds": ["./aladhan.mp3"]
        }
      ],
      "expo-secure-store",
      "expo-audio",
      "expo-location",
      "expo-task-manager",
      "expo-localization"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0273799a-9917-4cae-ad12-50a19bf22785"
      }
    }
  }
}
